          });

          const result = await response.json();

          if (result.success) {
            showMessage(`äºˆç´„ãŒå®Œäº†ã—ã¾ã—ãŸï¼äºˆç´„ç•ªå·: ${result.reservationId}`, 'success');
            form.reset();
